{
  "name": "codemie",
  "description": "Event-driven observability for Claude Code. Captures session events and syncs metrics/conversations to CodeMie platform.",
  "author": {
    "name": "AI/Run CodeMie",
    "email": "support@codemieai.com"
  },
  "version": "1.0.0",
  "localCopy": {
    "enabled": true,
    "strategy": "hybrid",
    "includes": [
      "claude-templates/**"
    ],
    "excludes": [
      "**/*.test.js",
      "**/.DS_Store",
      "**/node_modules/**"
    ],
    "targetDir": ".codemie",
    "preserveStructure": true,
    "overwritePolicy": "newer"
  }
}
