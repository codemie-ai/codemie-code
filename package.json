{
  "name": "@codemieai/code",
  "version": "0.0.38",
  "packageManager": "bun@1.3.9",
  "description": "Unified AI coding assistant CLI - Manage Claude Code, Gemini & custom agents. Multi-provider support (OpenAI, Azure, LiteLLM, SSO). Built-in LangGraph agent with file operations & git integration.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "codemie": "./bin/codemie.js",
    "codemie-claude": "./bin/codemie-claude.js",
    "codemie-claude-acp": "./bin/codemie-claude-acp.js",
    "codemie-gemini": "./bin/codemie-gemini.js",
    "codemie-opencode": "./bin/codemie-opencode.js"
  },
  "files": [
    "dist",
    "bin",
    "scripts",
    "src/workflows/templates/**/*.yml",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run tsc && bun run tsc-alias && bun run copy-plugin",
    "copy-plugin": "bun scripts/copy-plugins.js",
    "dev": "bun --watch run tsc",
    "test": "vitest",
    "test:unit": "vitest run src",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint '{src,tests}/**/*.ts' --max-warnings=0",
    "lint:fix": "eslint '{src,tests}/**/*.ts' --fix",
    "commitlint": "commitlint --edit",
    "commitlint:last": "commitlint --from HEAD~1 --to HEAD --verbose",
    "validate:secrets": "bun scripts/validate-secrets.js",
    "license-check": "bun scripts/license-check.js",
    "ci": "bun run license-check && bun run lint && bun run build && bun run test:unit && bun run test:integration",
    "ci:full": "bun run commitlint:last && bun run ci",
    "prepare": "husky",
    "prepublishOnly": "bun run build",
    "prepack": "bun run build"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings=0 --no-warn-ignored",
      "vitest related --run"
    ],
    "package.json": [
      "bun run license-check"
    ]
  },
  "keywords": [
    "ai",
    "artificial-intelligence",
    "coding-assistant",
    "code-generation",
    "cli",
    "command-line",
    "claude",
    "claude-code",
    "openai",
    "gemini",
    "anthropic",
    "gpt",
    "chatgpt",
    "ai-agents",
    "coding-agents",
    "langgraph",
    "langchain",
    "code-review",
    "refactoring",
    "test-generation",
    "documentation",
    "bug-fixing",
    "litellm",
    "azure-openai",
    "aws-bedrock",
    "sso",
    "enterprise",
    "multi-provider",
    "developer-tools",
    "productivity",
    "automation",
    "pair-programming",
    "code-assistant",
    "ai-code",
    "copilot-alternative",
    "cursor-alternative"
  ],
  "author": "AI/Run Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codemie-ai/codemie-code.git"
  },
  "homepage": "https://github.com/codemie-ai/codemie-code#readme",
  "bugs": {
    "url": "https://github.com/codemie-ai/codemie-code/issues"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock": "^3.949.0",
    "@aws-sdk/client-bedrock-runtime": "^3.948.0",
    "@aws-sdk/credential-providers": "^3.948.0",
    "@langchain/core": "^1.0.4",
    "@langchain/langgraph": "^1.0.2",
    "@langchain/openai": "^1.1.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "codemie-sdk": "^0.1.330",
    "commander": "^11.1.0",
    "dedent": "^1.7.1",
    "dotenv": "^16.3.1",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.5",
    "inquirer": "^9.2.12",
    "keytar": "^7.9.0",
    "minimatch": "^10.1.1",
    "open": "^8.4.2",
    "ora": "^7.0.1",
    "strip-ansi": "^7.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.38.0",
    "@types/dedent": "^0.7.2",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/ui": "^4.0.10",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.3",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
